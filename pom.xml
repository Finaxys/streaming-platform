    <modules>
        <module>inject-layer</module>
        <module>stream-layer</module>
    </modules>




    <properties>
        <!-- General properties -->
        <java.version>1.7</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>


        <!-- Libraries versions -->
        <log4j.version>2.6.2</log4j.version> <!-- http://logging.apache.org/log4j/2.x/maven-artifacts.html -->
        <junit.version>4.12</junit.version> <!-- https://mvnrepository.com/artifact/junit/junit -->
        <kafka.version>0.10.0.1</kafka.version> <!-- https://mvnrepository.com/artifact/org.apache.kafka -->
        <spark.version>2.0.0</spark.version> <!-- https://mvnrepository.com/artifact/org.apache.spark -->
        <spark.streaming.kafka.version>1.6.2</spark.streaming.kafka.version> <!-- https://mvnrepository.com/artifact/org.apache.spark/spark-streaming-kafka_2.11 -->
        <hbase.version>1.2.2</hbase.version> <!-- https://mvnrepository.com/artifact/org.apache.hbase -->
        <flink.version>1.1.1</flink.version> <!-- https://mvnrepository.com/artifact/org.apache.flink -->
        <curator.test.version>3.2.0</curator.test.version>

        <!-- maven plugin versions -->
        <maven-compiler-plugin.version>3.5.1</maven-compiler-plugin.version>

    </properties>

    <dependencyManagement>

        <dependencies>

            <!-- ===== LOGGING =====  -->
            <dependency>
                <groupId>org.apache.logging.log4j</groupId>
                <artifactId>log4j-api</artifactId>
                <version>${log4j.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.logging.log4j</groupId>
                <artifactId>log4j-core</artifactId>
                <version>${log4j.version}</version>
            </dependency>

            <!-- ===== TESTS ===== -->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>

            <!-- ===== KAFKA ===== -->
            <dependency>
                <groupId>org.apache.kafka</groupId>
                <artifactId>kafka_2.11</artifactId>
                <version>${kafka.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.kafka</groupId>
                <artifactId>kafka-clients</artifactId>
                <version>${kafka.version}</version>
            </dependency>
        </dependencies>

    </dependencyManagement>
</project>




